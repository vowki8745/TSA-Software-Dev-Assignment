<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9b9b9b"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TextView to display the county -->
        <TextView
            android:id="@+id/countyOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="County: "
            android:textSize="24sp" />

        <!-- TableLayout to display your data in rows.
             Rows can be added programmatically in your Activity. -->
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:stretchColumns="*">

            <!-- Optionally, include a header row here -->
            <!--
            <TableRow>
                <TextView
                    android:text="Rank"
                    android:textStyle="bold"
                    android:padding="8dp" />
                <TextView
                    android:text="Species"
                    android:textStyle="bold"
                    android:padding="8dp" />
                <TextView
                    android:text="Count"
                    android:textStyle="bold"
                    android:padding="8dp" />
            </TableRow>
            -->

        </TableLayout>

        <!-- TextView to display the future most prevalent species -->
        <TextView
            android:id="@+id/futureSpeciesOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Future Most Prevalent Species: "
            android:textSize="24sp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>